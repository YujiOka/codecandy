<h1 style="text-align: center">問題管理ページ</h1>
<%= link_to "問題追加", new_question_path, class: "btn btn-primary" %>

<table class="table" style="margin-top: 2em">
  <thead>
    <tr>
      <td>問題名</td>
      <td>詳細</td>
      <td>削除</td>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td>
          <%= link_to "詳細",
            question_path(question),
            class: "btn btn-info"
          %>
        </td>
        <td>
          <%= link_to "削除",
          question_path(question),
          method: :delete,
          class: "btn btn-danger",
          data: {confirm: "本当に削除していいですか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
