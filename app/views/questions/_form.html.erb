<%= link_to "問題追加のルール",
  'https://github.com/shiotomo/code-candy/wiki/%E5%95%8F%E9%A1%8C%E4%BD%9C%E6%88%90%E6%99%82%E3%81%AE%E3%83%AB%E3%83%BC%E3%83%AB',
  class: "btn btn-info",
  target: "_blank"
%>
<hr />
<%= form_with model: @question, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :body, "内容" %>
    <%= f.text_area :body, size: "10x10", class: "form-control" %>
  </div>

  <div id="answer" class="field">
    <%= f.fields_for :answers, @question.answers do |answer| %>
      <%= render 'answer_fields', f: answer %>
    <% end %>
  </div>
  <div class="add_button" style="margin-top: 1em">
    <%= link_to_add_association "標準入出力追加", f, :answers, class: "btn btn-info" %>
  </div>

  <div class="action" style="margin-top: 2em">
    <%= f.submit "登録", class: "btn btn-primary", style: "margin-bottom: 1em" %>
  </div>
<% end %>
