<!DOCTYPE html>
<html>
  <head>
    <title>CodeCandy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">メニュー</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'CodeCandy', root_url %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <%= link_to "Free coding", codes_path, class: "btn btn-info navbar-btn" %>
              <%= link_to "Sign Out", signout_path, class: "btn btn-danger navbar-btn" %>
            <% else %>
              <%= link_to "Sign in with Twitter", "/auth/twitter", class: "btn btn-primary navbar-btn" %>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <div class="container">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
          <%= yield %>
          <hr />
          <p style="text-align: center">
          &copy; CodeCandy shiotomo 2018
          </p>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>
  </body>
</html>
