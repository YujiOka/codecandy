<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to 'TOP', tops_path %>
  </li>
  <li>
    <%= link_to 'カテゴリー', sections_path %>
  </li>
  <li>
    <%= link_to '問題一覧', lessons_path %>
  </li>
</ul>
<h1 style="text-align: center">CodeCandyへようこそ</h1>
<!-- ここに使い方などを書いていく -->
<p style="text-align: center">
  CodeCandyでプログラミング力をアップさせよう!
</p>
<div class="row">
  <div class="col-lg-3">
    <div class="panel panel-default">
      <div class="panel panel-heading">
        プロフィール
      </div>
      <div class="panel panel-body">
        <%= image_tag current_user.image_url %>
        <h3><%= current_user.user_name %></h3>
        <h3><%= current_user.screen_name %></h3>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="panel panel-info">
      <div class="panel panel-heading">
        あなたのステータス
      </div>
      <div class="panel panel-body">
        <div class="graph">
          <%= pie_chart @analysis %>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>プログラミング言語</th>
              <th>提出数</th>
            </tr>
          </thead>
          <tbody>
            <% @analysis.each do |ana| %>
              <tr>
                <td><%= ana[0] %></td>
                <td><%= ana[1] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
