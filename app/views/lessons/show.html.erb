<h1><%= @question.title %></h1>

<div class="row">
  <div class="col-lg-4">
    <p>
      <div class="panel panel-info">
        <div class="panel panel-heading">
          <label>問題</label>
        </div>
        <div class="panel panel-body">
          <%= simple_format @question.body %>
        </div>
      </div>
    </p>
    <p>
      <div class="panel panel-default">
        <div class="panel panel-heading">
          標準入出力
        </div>
        <div class="panel panel-body">
          <label>標準入力</label>
          <%= simple_format @input %>
          <label>標準出力</label>
          <%= simple_format @output %>
        </div>
      </div>
    </p>
  </div>

  <div class="col-lg-8">
    <button type="button" id="save_button" class="btn btn-primary">
      Save
    </button>
    <button type="button" id="load_button" class="btn btn-default">
      Load
    </button>
    <input type="file" id="load_file" style="display: none">

    <!-- ace editor -->
    <div id="source_code" style="height: 450px; width: 100%"></div>

    <!-- 標準入出力 -->
    <h3>実行言語 :
      <select id="language" class="btn btn-default">
        <option value="Ruby">Ruby</option>
        <option value="Python">Python</option>
        <option value="C" selected>C</option>
      </select>
    </h3>

    <h3>標準入力</h3>
    <textarea name="input" id="input" class="form-control" rows="7"></textarea>

    <button type="button" id="run_button" class="btn btn-primary" style="margin-top:1em">
      実行
    </button>

    <input type="hidden" id="answer_id" value="<%= @question.id %>">

    <button type="button" id="judge_button" class="btn btn-default" style="margin-top:1em">
      解答
    </button>

    <div class="row">
      <div class="col-lg-6">
        <h3>標準出力</h3>
        <pre>
    <div id="stdout"></div>
        </pre>
        <h4>終了コード</h4>
        <pre>
    <div id="exit_code"></div>
        </pre>
        <h4>エラーメッセージ</h4>
        <pre>
    <div id="stderr"></div>
        </pre>
        <h4>実行時間</h4>
        <pre>
    <div id="time"></div>
        </pre>
      </div>

      <div class="col-lg-6">
        <h3 style="color: gray"><b>解答結果</b></h3>
        <pre>
    <div id="answer"></div>
        </pre>
      </div>
    </div>

  </div>
</div>

<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.0/ace.js'%>
<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.3/ext-language_tools.js'%>
<%= javascript_include_tag 'ui.js' %>
<%= javascript_include_tag 'run.js' %>
